
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Shared GTIN on product template form -->
    <record id="view_product_template_form_x_shared_barcode" model="ir.ui.view">
        <field name="name">product.template.form.x_shared_barcode</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="x_shared_barcode"/>
            </xpath>
        </field>
    </record>

    <!-- Add Shared GTIN on product variant form (related, optional writable) -->
    <record id="view_product_product_form_x_shared_barcode" model="ir.ui.view">
        <field name="name">product.product.form.x_shared_barcode</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="x_shared_barcode"/>
            </xpath>
        </field>
    </record>
</odoo>
